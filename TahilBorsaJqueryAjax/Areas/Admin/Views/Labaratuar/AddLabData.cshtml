
@{
    ViewData["Title"] = "AddLabData";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("AddLabData", "Labaratuar", FormMethod.Post))
{
    <div class="container mt-5">
        <div class="form-control">
            <h1>Ürün Besin Değeri Girişi</h1>
            <br />

            <div class="row">
                <div class="col-md-6">
                    <label>Ürün Giriş Id</label>
                    <input id="tblEntryProductId" class="form-control"/>
                </div>
                <br />
                <div class="col-md-6">
                    <label>Ürün Besin Değerini Giriniz</label>
                    <input id="NutritionalValue" class="form-control" />
                </div>
            </div>
            <br />
            <input type="hidden" value="true" name="Process" />
            <div id="liveAlertPlaceholder"></div>
            <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Sil</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Ürün Besin Değerini Eklemek İstiyor musunuz ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-danger" id="liveAlertBtn">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
}

<script>
    const alertPlaceholder = document.getElementById('liveAlertPlaceholder')
    const appendAlert = (message, type) => {
        const wrapper = document.createElement('div')
        wrapper.innerHTML = [
            `<div class="alert alert-${type} alert-dismissible" role="alert">`,
            `   <div>${message}</div>`,
            '   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>',
            '</div>'
        ].join('')

        alertPlaceholder.append(wrapper)
    }

    const alertTrigger = document.getElementById('liveAlertBtn')
    if (alertTrigger) {
        alertTrigger.addEventListener('click', () => {
            appendAlert('Ürün Besin Değeri Başarıyla Kaydedildi!', 'success')
        })
    }

    const myModal = document.getElementById('myModal')
    const myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', () => {
        myInput.focus()
    })
</script>
