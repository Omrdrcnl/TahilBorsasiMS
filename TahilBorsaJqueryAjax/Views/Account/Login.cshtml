@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-4 col-md-8 col-12 mx-auto">
        <div class="card z-index-0 fadeIn3 fadeInBottom">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                    <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Giriş Yap</h4>

                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("GirisYap", "Account"))
                {
                    <form class="text-start" id="LoginForm">
                        <div class="input-group input-group-outline my-3">
                            <input type="text" name="UserName" id="username" class="form-control" />
                        </div>
                        <div class="input-group input-group-outline mb-3">
                            <input type="password" name="Password" id="password" class="form-control" />

                        </div>
                        <div class="form-check form-switch d-flex align-items-center mb-3">
                            <input class="form-check-input" type="checkbox" id="rememberMe" checked>
                            <label class="form-check-label mb-0 ms-3" for="rememberMe">Beni Hatırla</label>
                        </div>
                        <div class="text-center">
                            <button type="submit" id="LoginButton" class="btn bg-gradient-primary w-100 my-4 mb-2">Giriş Yap</button>
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.LoginError))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.LoginError
                            </div>

                        }
                    </form>
                }

            </div>
        </div>
    </div>
</div>

