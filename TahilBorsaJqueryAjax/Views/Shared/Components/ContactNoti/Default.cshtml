
@model TahilBorsaJqeryAjax.Areas.Admin.Model.ContactNotification


<div class="col-md-3">

    <a href="~/Admin/Contact/Index" class="btn btn-primary btn-block mb-3">Gelen Kutusu</a>

    <div class="card">

        <div class="card-header">

            <h3 class="card-title">Klasörler</h3>

            <div class="card-tools">

                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                    <i class="fas fa-minus"></i>

                </button>

            </div>

        </div>

        <div class="card-body p-0">

            <ul class="nav nav-pills flex-column">

                <li class="nav-item active">

                    <a href="/Admin/Contact/Index" class="nav-link">

                        <i  class="fas fa-inbox"></i> Gelen İletişim İstekleri

                        <span class="badge bg-primary float-right">@Model.ComeIn</span>

                    </a>

                </li>

                <li class="nav-item">

                    <a href="/Admin/Contact/Archive" class="nav-link">

                        <i class="far fa-file-alt"></i> Taslaklar
                        <span class="badge bg-primary float-right">@Model.Archive</span>

                    </a>

                </li>

                <li class="nav-item">

                    <a href="/Admin/Contact/Spam" class="nav-link">

                        <i class="fas fa-filter"></i> Spam

                        <span class="badge bg-warning float-right">@Model.Spam</span>

                    </a>

                </li>

                <li class="nav-item">

                    <a href="/Admin/Contact/Deleted" class="nav-link">

                        <i class="far fa-trash-alt"></i> Silenenler
                        <span class="badge bg-primary float-right">@Model.Delete</span>

                    </a>

                </li>

            </ul>

        </div>

        <!-- /.card-body -->

    </div>

    <!-- /.card -->

    <div class="card">

        <div class="card-header">

            <h3 class="card-title">Etiketler</h3>

            <div class="card-tools">

                <button type="button" class="btn btn-tool" data-card-widget="collapse">

                    <i class="fas fa-minus"></i>

                </button>

            </div>

        </div>

        <div class="card-body p-0">

            <ul class="nav nav-pills flex-column">

                <li class="nav-item">

                    <a href="/Admin/Contact/Important" class="nav-link">

                        <i class="far fa-circle text-danger"></i>
                        Önemli
                        <span class="badge bg-primary float-right">@Model.Important</span>

                    </a>

                </li>

                <li class="nav-item">

                    <a href="/Admin/Contact/Deleted/Ads" class="nav-link">

                        <i class="far fa-circle text-warning"></i> Tanıtımlar

                    </a>

                </li>

                <li class="nav-item">

                    <a href="/Admin/Contact/Social" class="nav-link">

                        <i class="far fa-circle text-primary"></i>

                        Sosyal İlişkiler

                    </a>

                </li>

            </ul>

        </div>

        <!-- /.card-body -->

    </div>

    <!-- /.card -->

</div>
