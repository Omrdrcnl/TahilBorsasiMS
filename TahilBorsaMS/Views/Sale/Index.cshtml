@using TahilBorsaMS.Models.Entity
@model List<tblSale>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("Index", "Sale", FormMethod.Get))

{
    <div class="container mt-5">
        <h2>Satışa Hazır Ürünler</h2>
        <table class="table table-bordered table-striped">
            <tr class="table-info">
                <th>Giriş Id</th>
                <th>Çiftçi Id</th>
                <th>Çiftçi Kimlik no</th>
                <th>Ürün Besin Değeri</th>
                <th class="text-center">İşlem</th>

            </tr>
            @foreach (var k in Model)
            {
                <tr>
                    <td>@k.tblEntryProductId</td>
                    <td>@k.tblEntryProduct.tblFarmerId</td>
                    <td>@k.tblEntryProduct.tblFarmer.IdentityNo</td>
                    <td>@k.tblLabData.NutritionalValue</td>
                    <td class="text-center"><a href="/Sale/CallSale/@k.Id" class="btn btn-success">Satış Gir</a></td>

                </tr>
            }
        </table>
        <div class="btn-group btn-group-lg d-flex justify-content-between">
            <div>
                <a href="/Sale/Saled" class="btn btn-warning btn-lg">Geçmiş Satış Verileri</a>
            </div>

        </div>
    </div>
}
