
@model TahilBorsaMS.Models.Entity.tblEntryProduct
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("AddEntryProduct", "EntryProduct", FormMethod.Post))
{
    <div class="form-control">
        <h1>Yeni Ürün Veri girişi</h1>
        <br />
        <input name="Id" type="hidden" />
        <label>Çiftçi Id</label>
        <br />
        @Html.TextBoxFor(x => x.FarmerId, new { @class = "form-control" })
        <br />
        <label>Ürün Çeşidi</label>
        @Html.DropDownListFor(x => x.tblProductName.Id, ViewBag.ProductList as IEnumerable<SelectListItem>, new { @class = "form-control" })
        <br />
        <label>Ürün Miktarı (kg)</label>
        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control" })
        <br />
        <label>Tarih</label>
        <input type="datetime" name="DateTime" class="form-control" value="@DateTime.Now.ToShortDateString()" />
        <br />
        <button class="btn btn-warning">Ürünü Sisteme Gir</button>
    </div>
}