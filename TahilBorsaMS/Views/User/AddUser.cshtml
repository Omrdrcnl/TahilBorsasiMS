@model TahilBorsaMS.Models.Entity.tblUser
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-control container mt-5" method="post">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">Edit Profile</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            <label>Adı</label>
                            @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <div class="form-group">
                            <label>Soyadı</label>
                            @Html.TextBoxFor(p => p.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label for="Tel">Kullanıcı Adı</label>
                            @Html.TextBoxFor(p => p.Username, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                        </div>
                    </div>
                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label>Şifre</label>
                            @Html.TextBoxFor(p => p.Password, new { @class = "form-control", @placeholder = "Şifre" })
                        </div>
                    </div>
                    <div class="col-md-4 pr-1">
                        <div class="form-group">
                            <label>Rol</label>
                            @Html.DropDownListFor(P => P.tblRolId, (List<SelectListItem>)ViewBag.Rol, new { @class = "form-control", @placeholder = "Rol" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="update ml-auto mr-auto">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary btn-round">Kullanıcı Bilgilerini Ekle</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Kaydet</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Kullanıcı Bilgileri Kaydetmek İstiyor musunuz ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>

</form>
