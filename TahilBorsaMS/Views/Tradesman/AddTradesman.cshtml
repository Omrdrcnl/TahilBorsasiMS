@model TahilBorsaMS.Models.Entity.tblTradesman

@{
    ViewBag.Title = "AddTradesman";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form class="form-control container mt-5" method="post">
    <div class="col-md-12">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">Edit Profile</h5>
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-5 pr-1">
                        <div class="form-group">
                            <label>TC Kimlik No</label>
                            @Html.TextBoxFor(p => p.IdentityNo, new { @class = "form-control", @placeholder = "Kimlik Numarası" })
                            @Html.ValidationMessageFor(model => model.IdentityNo, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col-md-3 px-1">
                        <div class="form-group">
                            <label>Doğum Tarihi</label>
                            <input type="date" class="form-control" name="Birthdate" placeholder="Kayıt No">
                        </div>
                    </div>
                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label for="Tel">Telefon</label>
                            @Html.TextBoxFor(p => p.Contact, new { @class = "form-control", @placeholder = "Telefon" })
                            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            <label>Adı</label>
                            @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <div class="form-group">
                            <label>Soyadı</label>
                            @Html.TextBoxFor(p => p.LastName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Adres</label>
                            @Html.TextBoxFor(p => p.tblAddress.FullAddress, new { @class = "form-control", @placeholder = "Adres" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 pr-1">
                        <div class="form-group">
                            <label>Şehir</label>
                            @Html.DropDownListFor(P => P.tblAddress.tblDistrict.tblCity.Id, (List<SelectListItem>)ViewBag.CityList, new { @class = "form-control", @placeholder = "Şehir" })
                        </div>
                    </div>
                    <div class="col-md-4 px-1">
                        <div class="form-group">
                            <label>İlçe</label>
                            @Html.DropDownListFor(P => P.tblAddress.tblDistrict.Id, (List<SelectListItem>)ViewBag.District, new { @class = "form-control", @placeholder = "İlçe" })
                        </div>
                    </div>
                    <div class="col-md-4 pl-1">
                        <div class="form-group">
                            <label>Mahalle/Köy</label>
                            @Html.TextBoxFor(p => p.tblAddress.NeighborhoodName, new { @class = "form-control", @placeholder = "Mahalle/Köy" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="update ml-auto mr-auto">
                        <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary btn-round">Esnaf Bilgilerini Ekle</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Kaydet</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Esnaf Bilgileri Kaydetmek İstiyor musunuz ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>

</form>





<script>
    const myModal = document.getElementById('myModal')
    const myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', () => {
        myInput.focus()
    })

</script>
