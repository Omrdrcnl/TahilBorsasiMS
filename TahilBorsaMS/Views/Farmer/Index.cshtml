@using TahilBorsaMS.Models.Entity

@model List<tblFarmer>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="container">
    <h2>Çiftçi Paneli</h2>
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Doğum Tarihi</th>
            <th>İletişim</th>
            <th>Şehir</th>
            <th>İlçe</th>
            <th>Mahalle/Köy</th>
            <th>Adres</th>
            <th>Sil</th>
            <th>Güncelle</th>
           
        </tr>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Id</td>
                <td>@f.FirstName</td>
                <td>@f.LastName</td>
                <td>@f.BirthDate</td>
                <td>@f.Contact</td>
                <td>@f.tblAddress.tblCity.Name</td>
                <td>@f.tblAddress.tblDistrict.Name</td>
                <td>@f.tblAddress.NeighborhoodName</td>
                <td>@f.tblAddress.FullAddress</td>
                <td><a class="btn btn-danger" href="~/Farmer/DeleteFarmer/@f.Id">Sil</a></td>
                <td><a class="btn btn-success" href="~/Farmer/CallFarmer/@f.Id">Güncelle</a></td>
               
            </tr>
        }
    </table>
    <a href="~/Farmer/AddFarmer" class="btn btn-primary">Yeni Kayıt Ekle</a>
</div>
